<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header" id="headerUI">Edit <%= blog.title %></div>
    <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
        <div class="field">
            <input type="text" name="blog[title]" placeholder="title" value="<%= blog.title %>">
        </div>
        <div class="field">
            <input type="text" name="blog[image]" placeholder="image url" value="<%= blog.image %>">
        </div>
        <div class="field">
            <textarea name="blog[body]" placeholder="body"><%= blog.body %></textarea>
        </div>
        <button type-"submit" class="ui blue basic button">Submit!</button>
    </form>
</div>

<% include partials/footer %>